<% layout('layout') -%> 
 
<div class="container">
    <div class="row">
        <div id="">
            <% for(let i=0; i < pins.length; i++){%>
                <div class="col-md-4" style="margin:20px;">
                    <a href="/pins/details/<%= pins[i]._id %>">
                        <img src="<%= pins[i].path %>" style="width: 200px;" />
                    </a>
                    <h2>
                        <a href="/pins/details/<%= pins[i]._id %>">
                            <%= pins[i].title %>
                        </a>
                    </h2>
                    <p>
                        Submitted by <%= pins[i].username %>
                        <a class="btn btn-outline-danger btn-sm" href="/pins/delete/<%= pins[i]._id %>">
                            Delete
                        </a>
                    </p>
                </div>
            <%}%>
        </div>
    </div>
</div>